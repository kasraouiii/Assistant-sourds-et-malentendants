<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bacwats"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="143dp"
        android:layout_alignParentLeft="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="64dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/phrase"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:text="Excellence is an art won by training and habituation. We do not act rightly because we have virtue or excellence, but we rather have those because we have acted rightly."
        android:textColor="@android:color/background_dark"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/merci"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="181dp"
        android:text="Click on the microphone and read the following sentence : "
        android:textColor="@android:color/background_dark"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="247dp" />

    <ImageButton
        android:id="@+id/microButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/confirm"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:onClick="microClick"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="391dp" />


    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:text="Confirm"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add new speaker"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:fontFamily="@font/tienne"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="37dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp" />

    <Button
        android:id="@+id/btn_choose"
        android:layout_width="161dp"
        android:layout_height="33dp"
        android:layout_alignEnd="@+id/merci"
        android:layout_below="@+id/textView5"
        android:background="@drawable/mybutton"
        android:text="Choose a picture"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/merci" />

    <Button
        android:id="@+id/takePic"
        android:layout_width="166dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/phrase"
        android:background="@drawable/mybutton"
        android:text="Take a picture"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/phrase" />


</RelativeLayout>