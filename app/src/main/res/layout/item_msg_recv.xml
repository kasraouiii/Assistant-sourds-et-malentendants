<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mon_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="TODO"
        android:src="@drawable/incon" />

    <TextView
        android:id="@+id/moi"
        android:layout_width="78dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mon_image"
        android:labelFor="@id/mon_image"
        android:text="nom"
        android:textSize="11sp" />

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/text_message"
        android:padding="10dp"
        android:textColor="#0b0404"

        android:layout_toRightOf="@id/mon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:arrowWidth="8dp"
        app:angle="8dp"
        app:arrowHeight="10dp"
        app:arrowPosition="14dp"
        app:arrowLocation="left"
        app:arrowCenter="true"
        app:bubbleColor="#fbfbfb"
        android:layout_toEndOf="@id/mon_image" />


</RelativeLayout>