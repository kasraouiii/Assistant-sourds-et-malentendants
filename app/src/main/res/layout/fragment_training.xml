<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_train1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:text="Train P1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_train2"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="152dp"
        android:text="Train P2"
        app:layout_constraintBottom_toTopOf="@+id/textView_train_state"
        app:layout_constraintStart_toStartOf="@+id/btn_train1" />
    <Button
        android:id="@+id/btn_train3"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="116dp"
        android:layout_marginTop="116dp"
        android:text="Train P3"
        app:layout_constraintBottom_toTopOf="@+id/textView_train_state"
        app:layout_constraintStart_toStartOf="@+id/btn_train2"
        app:layout_constraintTop_toTopOf="@+id/btn_train2" />

    <Button
        android:id="@+id/btn_train4"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="116dp"
        android:layout_marginTop="116dp"
        android:text="Train P4"
        app:layout_constraintBottom_toTopOf="@+id/textView_train_state"
        app:layout_constraintStart_toStartOf="@+id/btn_train3"
        app:layout_constraintTop_toTopOf="@+id/btn_train3"
        app:layout_constraintVertical_bias="0.325" />

    <TextView
        android:id="@+id/textView_train_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="133dp"
        android:layout_marginLeft="163dp"
        android:layout_marginStart="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>