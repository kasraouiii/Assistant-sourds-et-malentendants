<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacwats3"
    tools:context="com.example.first.myfirstapplication.MainActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="109dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/logo" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:text="Welcome to the Deaf/Dumb Application"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="@font/tienne"
        tools:textColor="#ffffff" />
    <Button
        android:id="@+id/conv"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="280dp"
        android:background="@drawable/mybutton"
        android:onClick="onButtonClick"
        android:padding="10dp"
        android:text="Ma conversation"
        android:textColor="#ffffff"
        />

    <Button
        android:id="@+id/amis"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp"
        android:background="@drawable/mybutton"
        android:onClick="onButtonClick"
        android:padding="10dp"
        android:text="Mes amis"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/nv_loc"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="208dp"
        android:background="@drawable/mybutton"
        android:onClick="onButtonClick"
        android:padding="10dp"
        android:text="Enregistrer un nouveau locuteur"
        android:textColor="#ffffff" />



</RelativeLayout>
