<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#7dcefa" />
            <gradient android:angle="-90" android:startColor="#35b9f1" android:endColor="#64c3f6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#68c2f6" />
            <solid android:color="#64c1f3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#4fb5f0" />
            <gradient android:angle="-90" android:startColor="#3ec4f4" android:endColor="#70caf8" />
        </shape>
    </item>
</selector>